{#
| Variable                          | Type      | Description                                                                  |
|-----------------------------------|-----------|------------------------------------------------------------------------------|
| component                         | object    | Contains merchant settings for fields from twilight.json `component` section |
| component.slides[].video_url      | string    | Video URL (MP4 recommended) for the slide background.                        |
| component.slides[].title          | ?string   | Main title for the slide.                                                    |
| component.slides[].description    | ?string   | Description or subtitle for the slide.                                       |
| component.slides[].cta_text       | ?string   | Text for the Call-to-Action button (optional).                               |
| component.slides[].cta_url        | ?string   | URL for the Call-to-Action button (optional).                                |
| component.slides                  | object[]  | List of slides.                                                              |
| position                          | int       | Sorting number starting from zero.                                           |
#}
{# داخل src/views/components/video-banner.twig #}

<section class="s-block s-block--hero-slider s-block--full-video-bg wide-placeholder">
    <salla-slider
      id="main-slider-{{ position }}"
      auto-play
      slider-config='{
        "lazy": "false",
        "loop": "true",
        "autoplay": { "delay": 7000 }
      }'
      type="fullwidth">
        <div slot="items">
            {% for slide in component.collection %} {# حلقة على عناصر المجموعة #}
                <div class="swiper-slide w-full min-h-[300px] lg:min-h-screen bg-dark relative flex items-center justify-center overflow-hidden">
                    {% if slide.video_url %}
                        <video class="absolute inset-0 w-full h-full object-cover video-banner__video" autoplay muted loop playsinline aria-hidden="true">
                            <source src="{{ slide.video_url }}" type="video/mp4" />
                            متصفحك لا يدعم عرض الفيديو.
                        </video>
                    {% elseif slide.image %}
                        {# Fallback to image if no video is provided #}
                        <div style="background-image: url({{ slide.image }});" class="overlay-bg bg-cover bg-center absolute inset-0"></div>
                    {% else %}
                        {# Generic fallback if neither video nor image is provided #}
                        <div class="absolute inset-0 bg-gray-700 flex items-center justify-center text-white">لا يوجد محتوى</div>
                    {% endif %}

                    {# Overlay to dim video/image and provide text contrast #}
                    <div class="absolute inset-0 bg-black opacity-50 video-banner__overlay-dimmer"></div>

                    {# Content Overlay #}
                    <div class="flex-center container pb-16 sm:pb-0 home-slider__content relative h-full z-10">
                        <div class="w-4/6 text-center md:w-7/12 lg:w-5/12 text-white">
                            {% if slide.alaanoan %}
                                <h2 data-swiper-parallax="-500" class="lg:text-title-size font-bold leading-tight mb-4 video-banner__title">{{ slide.alaanoan }}</h2>
                            {% endif %}
                            {% if slide.text_area_1 %}
                                <p data-swiper-parallax="-300" class="line-clamp-2 description video-banner__description">{{ slide.text_area_1 }}</p>
                            {% endif %}
                            {% if slide.cta_text and slide.cta_url %}
                                <a href="{{ slide.cta_url }}" class="btn btn-primary mt-8 video-banner__cta-button" data-swiper-parallax="-200">
                                    {{ slide.cta_text }}
                                </a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </salla-slider>
</section>
