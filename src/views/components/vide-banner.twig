{% set main_title = main_title|default('') %}
{% set sub_title = sub_title|default('') %}
{% set video_url = video_url|default('') %}
{% set cta_text = cta_text|default('') %}
{% set cta_url = cta_url|default('#') %}
{% set custom_classes = custom_classes|default('') %}

<section class="video-banner {{ custom_classes }}" role="banner" aria-label="بنر فيديو لمتجر إلكتروني كبير">
  {% if video_url %}
    <video autoplay muted loop playsinline aria-hidden="true" class="video-banner__video">
      <source src="{{ video_url }}" type="video/mp4" />
      متصفحك لا يدعم عرض الفيديو.
    </video>
  {% else %}
    {# Placeholder or fallback if videoUrl is not provided #}
    <div class="video-banner__placeholder">
        <p>فيديو غير متاح</p>
    </div>
  {% endif %}

  <div class="video-banner__overlay">
    <div class="video-banner__content">
        {% if main_title %}
            {# يستخدم كـ H1 للصفحة أو القسم لضمان التناسق الهرمي للمحتوى #}
            <h1 class="video-banner__main-title">{{ main_title }}</h1>
        {% endif %}

        {% if sub_title %}
            <p class="video-banner__sub-title">{{ sub_title }}</p>
        {% endif %}

        {% if cta_text and cta_url %}
            <a href="{{ cta_url }}" class="video-banner__cta-button" role="button" aria-label="{{ cta_text }}">
                {{ cta_text }}
            </a>
        {% endif %}
    </div>
  </div>
</section>
